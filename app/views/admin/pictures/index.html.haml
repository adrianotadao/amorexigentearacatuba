#pictures
  %h1 Imagens
  = link_to 'Nova imagem', new_admin_picture_path, :class => "button_add"

  - unless @pictures.blank?
    %table.list
      %thead
        %tr
          %th Nome
          %th Tamanho
          %th.actions

      %tbody
        - @pictures.each do |picture|
          %tr
            %td= picture.data_file_name
            %td= number_to_human_size picture.data_file_size
            %td.actions
              = link_to 'Detalhes', [:admin, picture], :class => "button_show"
              = link_to 'Editar', edit_admin_picture_path(picture), :class => "button_edit"
  - else
    .empty_list NÃ£o existem imagens cadastradas.

